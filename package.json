{
  "name": "@autoinvent/conveyor",
  "type": "module",
  "version": "1.7.0",
  "description": "UI component library for magql",
  "license": "BlueOak-1.0.0",
  "author": "Moebius Solutions",
  "files": [
    "dist"
  ],
  "main": "./dist/conveyor.umd.cjs",
  "module": "./dist/conveyor.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/conveyor.js"
      },
      "require": "./dist/conveyor.umd.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./logo.svg": "./dist/logo.svg"
  },
  "scripts": {
    "build": "pnpm build:css && tsc && vite build ",
    "build:storybook": "storybook build",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/styles.css",
    "build:examples:vite-react-ts": "pnpm build && pnpm pack &&  rm -f ./examples/vite-react-ts/*.tgz && cp *.tgz ./examples/vite-react-ts/ && cd ./examples/vite-react-ts/ && pnpm remove @autoinvent/conveyor && pnpm add ./*.tgz",
    "build:examples:cdn": "pnpm build && pnpm pack && cp -r ./dist ./examples/cdn",
    "examples:vite-react-ts": "cd ./examples/vite-react-ts/ && pnpm dev",
    "examples:cdn": "cd ./examples/cdn/ && pnpm dev",
    "storybook": "storybook dev -p 6006 --no-open",
    "biome:all": "pnpm format && pnpm lint && pnpm check",
    "format": "prettier . --write && biome format --write",
    "lint": "biome lint --write",
    "check": "biome check --write"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/error-message": "^2.0.1",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-visually-hidden": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "lucide-react": "^0.408.0",
    "react-hook-form": "^7.53.0",
    "react-select": "^5.8.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.5"
  },
  "peerDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@chromatic-com/storybook": "^1.9.0",
    "@codesandbox/sandpack-react": "^2.19.9",
    "@codesandbox/sandpack-themes": "^2.0.21",
    "@hookform/resolvers": "^3.9.0",
    "@storybook/addon-a11y": "^8.3.5",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-themes": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "lefthook": "^1.7.18",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "storybook": "^8.3.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vite-plugin-dts": "3.9.1",
    "zod": "^3.23.8"
  }
}
